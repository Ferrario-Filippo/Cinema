<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/dist/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinema.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/lib/DataTables/DataTables-1.13.4/css/dataTables.bootstrap5.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/DataTables/Buttons-2.3.6/css/buttons.dataTables.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/DataTables/Select-1.6.2/css/select.dataTables.css" />
    <link rel="icon" href="~/images/site/logo.png" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">Cinema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole(Cinema.Constants.Roles.ROLE_REGULAR_USER))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="Customer" asp-controller="User" asp-action="Index">Profilo</a>
                            </li>
                        }
                        @if (User.IsInRole(Cinema.Constants.Roles.ROLE_ADMIN))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Amministrazione</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Film" asp-action="Index">Film</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Room" asp-action="Index">Sale</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Show" asp-action="Index">Proiezioni</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Ticket" asp-action="Index">Biglietti</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Review" asp-action="Index">Recensioni</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Hometown" asp-action="Index">Comuni</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Statistics" asp-action="Index">Statistiche</a>
                                </div>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container min-vh-100">
        <main role="main" class="pb-3 min-vh-100">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <div class="spacer">

    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Ferrario Filippo - <a asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/lib/DataTables/DataTables-1.13.4/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/lib/DataTables/DataTables-1.13.4/js/dataTables.bootstrap5.js"></script>
    <script type="text/javascript" src="~/lib/DataTables/Buttons-2.3.6/js/dataTables.buttons.js"></script>
    <script type="text/javascript" src="~/lib/DataTables/Select-1.6.2/js/dataTables.select.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
