@{
	ViewData["Title"] = "Elenco Sale";
}

<h1>@nameof(Room)</h1>

<div class="container p-3 mb-5 min-vh-100">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Elenco Sale</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Room" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Crea nuova Sala
			</a>
		</div>
	</div>
	<br /><br />

	<table id="tblData" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Ha l'ISense</th>
				<th>Posti</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>
@section Scripts{
	<script src="~/js/rooms.js"></script>
}