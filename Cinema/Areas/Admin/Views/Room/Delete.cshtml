@model Room
@{
	ViewData["Title"] = "Elimina Sala";
}

<form method="post" asp-action="Delete">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Elimina Sala</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="RoomId"></label>
			<input asp-for="RoomId" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Elimina</button>
		<a asp-controller="Room" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Indietro
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
