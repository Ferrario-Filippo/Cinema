@{
	ViewData["Title"] = $"Elenco Comuni";
}

<h1>@nameof(Hometown)</h1>

<div class="container p-mid-3 mb-5">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Elenco Comuni</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Hometown" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Crea nuovo Comune
			</a>
		</div>
	</div>
	<br /><br />

	<table id="tblData" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Nome</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>
@section Scripts{
	<script src="~/js/hometowns.js"></script>
}