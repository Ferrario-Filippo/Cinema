@model Ticket
@{
	ViewData["Title"] = $"Elenco {nameof(Ticket)}";
}

<h1>@nameof(Ticket)</h1>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Elenco @nameof(Ticket)</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Film" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Crea nuovo @nameof(Ticket)
			</a>
		</div>
	</div>
	<br /><br />

	<table id="tblData" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Numero</th>
				<th>Fila</th>
				<th>Proiezione</th>
				<th>Costo</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>
@section Scripts{
	<script src="~/js/Film.js"></script>
}