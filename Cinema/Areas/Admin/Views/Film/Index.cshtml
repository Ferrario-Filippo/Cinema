@{
	ViewData["Title"] = $"Elenco {nameof(Film)}";
}

<h1>@nameof(Film)</h1>

<div class="container p-3 mb-5">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Elenco @nameof(Film)</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Film" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Crea nuovo @nameof(Film)
			</a>
		</div>
	</div>
	<br /><br />

	<table id="tblData" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Titolo</th>
				<th>Descrizione</th>
				<th>Genere</th>
				<th>Durata</th>
				<th>Anno di produzione</th>
				<th>Valutazione</th>
				<th></th>
			</tr>
		</thead>
	</table>
</div>
@section Scripts{
	<script src="~/js/films.js"></script>
}