@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row vh-100 mb-3">
	<div class="col-md-2 col-0"></div>
	<div class="col-md-8">
		<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column">
			<h2>Create a new account.</h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="form-floating mb-3">
				<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
				<label asp-for="Input.Email">Email</label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="row g-1">
				<div class="form-floating mb-3 px-0 col-md-6">
					<input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Nome" />
					<label asp-for="Input.Name">Nome</label>
					<span asp-validation-for="Input.Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 px-0 col-md-6">
					<input asp-for="Input.Surname" class="form-control" aria-required="true" placeholder="Cognome" />
					<label asp-for="Input.Surname">Cognome</label>
					<span asp-validation-for="Input.Surname" class="text-danger"></span>
				</div>
				<div class="col-md-3 col-0"></div>
				<div class="form-floating mb-3 px-0 col-md-6">
					<input asp-for="Input.BirthDate" type="date" class="form-control" aria-required="true" placeholder="dd/mm/yyyy" />
					<label asp-for="Input.BirthDate">Data di nascita</label>
					<span asp-validation-for="Input.BirthDate" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 px-0 col-md-6">
					<select asp-for="Input.Gender" asp-items="@Model.Input.GenderList" class="form-select" aria-label="Role">
						<option disabled selected>-Seleziona genere-</option>
					</select>
				</div>
				<div class="form-floating mb-3 px-0 col-md-6">
					<select asp-for="Input.HometownId" asp-items="@Model.Input.TownsList" class="form-select" aria-label="Role">
						<option disabled selected>-Seleziona comune di residenza-</option>
					</select>
				</div>
				<div class="form-floating mb-3 px-0 col-md-6">
					<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
					<label asp-for="Input.Password">Password</label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3 px-0 col-md-6">
					<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
					<label asp-for="Input.ConfirmPassword">Conferma Password</label>
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>
			</div>
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrati</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
